# Project Info
PROJECT_NAME=scontrini
ENVIRONMENT=development
API_VERSION=v1
API_HOST=0.0.0.0
API_PORT=8000

# CORS
BACKEND_CORS_ORIGINS=["http://localhost:3000"]

# Supabase
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Google Cloud (OCR)
GOOGLE_CLOUD_PROJECT_ID=your-project-id
GOOGLE_APPLICATION_CREDENTIALS=path/to/credentials.json

# OpenAI
OPENAI_API_KEY=sk-...
OPENAI_MODEL=gpt-4o-mini

# OpenAI Temperature Settings
OPENAI_TEMPERATURE_PARSER=0.3
OPENAI_TEMPERATURE_NORMALIZER=0.7
OPENAI_TEMPERATURE_CATEGORIZER=0.3
OPENAI_TEMPERATURE_VALIDATOR=0.2

# OpenAI Embeddings
OPENAI_EMBEDDING_MODEL=text-embedding-ada-002
OPENAI_EMBEDDING_DIMENSIONS=1536
OPENAI_EMBEDDING_CACHE_SIZE=1000
OPENAI_EMBEDDING_MAX_RETRIES=3
OPENAI_EMBEDDING_RETRY_DELAY=1.0
OPENAI_EMBEDDING_COST_PER_1K=0.0001

# Cache Service
CACHE_BASE_CONFIDENCE=0.90
CACHE_PRICE_TOLERANCE=0.30
CACHE_MIN_HOUSEHOLDS_BOOST=3
CACHE_MIN_USAGE_BOOST=10
CACHE_RECENT_DAYS_THRESHOLD=90
CACHE_BOOST_HOUSEHOLDS=0.03
CACHE_BOOST_USAGE=0.02
CACHE_BOOST_RECENCY=0.02
CACHE_MAX_CONFIDENCE=0.97
CACHE_TIER2_PENALTY=0.05
CACHE_TIER2_MIN_CONFIDENCE=0.85

# Validation Service
VALIDATION_HIGH_CONFIDENCE_THRESHOLD=0.90
VALIDATION_LOW_CONFIDENCE_THRESHOLD=0.70

# Vector Search Service
VECTOR_SEARCH_MAX_RESULTS=10
VECTOR_SEARCH_SIMILARITY_THRESHOLD=0.75
VECTOR_SEARCH_BOOST_VERIFIED=0.05
VECTOR_SEARCH_BOOST_SAME_STORE=0.03

# Context Service
CONTEXT_RECENT_PURCHASES_DAYS=90
CONTEXT_MIN_FREQUENCY_THRESHOLD=3
CONTEXT_POPULAR_MIN_HOUSEHOLDS=2

# Web Search (Optional)
SERPER_API_KEY=
